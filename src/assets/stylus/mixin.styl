placeholderColor($color, $size = 16px) {
    &::-webkit-input-placeholder {
        color: $color;
        font-size: $size;
    }
    &::-moz-placeholder {
        /* Mozilla Firefox 19+ */
        color: $color;
        font-size: $size;
    }
    &::-moz-placeholder {
        /* Mozilla Firefox 4 to 18 */
        color: $color;
        font-size: $size;
    }
    &::-ms-input-placeholder {
        /* Internet Explorer 10-11 */
        color: $color;
        font-size: $size;
    }
}
// 不换行
no-wrap() {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
// 行数限制
text-hid($num) {
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: $num;
    overflow: hidden;
}
text-hid($h, $ah) {
    position: relative;
    line-height: $h;
    height: $ah;
    overflow: hidden;
    &:after {
        content: ' ';
        position: absolute;
        bottom: 0;
        right: 0;
        padding-left: 40px;
    }
}
// 扩展点击区域
extend-click() {
    position: relative;
    &:before {
        content: '';
        position: absolute;
        top: -9px;
        left: -9px;
        right: -9px;
        bottom: -9px;
    }
}
after-borderTab($w) {
    position: relative;
    &::after {
        content: ' ';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: $w;
        height: 4px;
        background-color: $main-color;
        border-radius: 2px;
    }
}
line-1px($color, $h, $l = 0) {
    position: relative;
    &:after {
        display: block;
        position: absolute;
        content: ' ';
        width: 1px;
        height: $h;
        top: 50%;
        left: $l;
        background-color: $color;
        transform: translateY(-50%);
    }
}
// 1px像素border
border-1px($color, $pos = 0) {
    position: relative;
    &:after {
        display: block;
        position: absolute;
        left: 0;
        top: $pos;
        width: 100%;
        border-bottom: 1px solid $color;
        content: ' ';
    }
}
