            font-size: 13px;
            text-align: center;
        }
        // hold
        .order {
            font-size: 14px;
            color: #999;
        }
        .hold_dialog {
            width: 180px;
            margin: auto;
            li {
                display: flex;
                p {
                    font-size: 16px;
                    width: 90px;
                    &:first-child {
                        color: #666;
                    }
                    &:last-child {
                        color: #333;
                    }
                }
            }
        }
    }
    .van-button__text {
        font-size: 14px;
    }
}
