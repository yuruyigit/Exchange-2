@import '~assets/stylus/variable';
.lever {
    &_title {
        width: 100%;
        height: 30px;
        .List {
            width: 100%;
            height: 30px;
            display: flex;
            position: fixed;
            left: 0;
            top: 46px;
            justify-content: space-between;
            align-items: center;
            padding: 0 16px;
            background-color: $write;
            z-index: 9;
            &:after {
                content: '';
                position: absolute;
                width: 100%;
                height: 1px;
                border-bottom: 1px solid $colorE;
                bottom: 0;
                left: 0;
                transform: scaleY(0.75);
            }
            li {
                font-size: 12px;
                color: $color9;
                text-align: right;
                width: 25%;
                &:first-child {
                    width: 50%;
                    text-align: left;
                }
            }
        }
    }
    &_List {
        padding: 0 16px;
        &_single {
            height: 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-1px($colorE, 100%);
            .left {
                width: 50%;
                &_top {
                    padding-bottom: 8px;
                    display: flex;
                    align-items: flex-end;
                    .big {
                        font-size: 16px;
                        color: $color3;
                        padding-right: 6px;
                    }
                    .small {
                        font-size: 11px;
                        color: $color6;
                        padding-right: 10px;
                    }
                    .icon {
                        width: 25px;
                        img {
                            width: 100%;
                        }
                    }
                }
                &_bot {
                    font-size: 11px;
                    color: $color9;
                }
            }
            .middle {
                width: 25%;
                text-align: right;
                .usdt {
                    font-size: 18px;
                    color: $green;
                    padding-bottom: 8px;
                }
                .cny {
                    font-size: 10px;
                    color: $color9;
                }
            }
            .right {
                width: 25%;
                text-align: right;
                .rate {
                    width: 68px;
                    height: 24px;
                    background-color: $green;
                    border-radius: 4px;
                    font-size: 12px;
                    color: $write;
                }
            }
            &.fall {
                .middle {
                    .usdt {
                        color: $red;
                    }
                }
                .right {
                    .rate {
                        background-color: $red1;
                    }
                }
            }
        }
    }
}